@using EntityLayer.Concrete
@model List<Category> 

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklaması</th>
        <th>Durumu</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.CategoryID</td>
    <td>@item.CategoryName</td>
    <td>@item.CategoryDescription</td>
    <td>@item.CategoryStatus</td>

    <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-gradient-dark">Güncelle</a> </td>


</tr>
    }
</table>

<a class="btn btn-primary" href="/Category/AddCategory/">Yeni Kategori Ekle</a>